<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/text_light_blue"
                android:centerY="0.75"
                android:endColor="@color/text_light_blue"
                android:startColor="@color/text_light_blue" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#fbe9e7"
                    android:centerY="0.75"
                    android:endColor="#fbe9e7"
                    android:startColor="#fbe9e7" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:endColor="#ffcc80"
                    android:startColor="#ffcc80" />
            </shape>
        </clip>
    </item>
</layer-list>